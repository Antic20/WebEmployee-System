@model Employee

<form method="post">
	 <input asp-for="EmployeeId" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Employee</h2>
			<hr />
		</div>
		
		<div class="mb-3 row p-1">
			<label asp-for="FirstName" class="p-0"></label>
			<input asp-for="FirstName" class="form-control" />
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="LastName" class="p-0"></label>
			<input asp-for="LastName" class="form-control" />
			<span asp-validation-for="LastName" class="text-danger"></span>

		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Address" class="p-0"></label>
			<input asp-for="Address" class="form-control" />
			<span asp-validation-for="Address" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Email" class="p-0"></label>
			<input asp-for="Email" class="form-control" />
			<span asp-validation-for="Email" class="text-danger"></span>

		</div>
		<div class="mb-3 row p-1">
			<label asp-for="NetSalary" class="p-0"></label>
			<input asp-for="NetSalary" class="form-control" />
			<span asp-validation-for="NetSalary" class="text-danger"></span>

		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Position"></label>
			<input asp-for="Position" class="form-control" />
			<span asp-validation-for="Position" class="text-danger"></span>
		</div>

		<div class="row row p-1">
			<div class="col-6">
				<button type="submit" class="btn btn-primary form-control">Update</button>
			</div>
			<div class="col-6">
				<a asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary form-control">
					Back to list
				</a>
			</div>
		</div>
	</div>
</form>

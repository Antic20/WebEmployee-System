@model Employee

@{
    ViewData["Title"] = "Employee Details";
}

<h2>Employee Details</h2>
<div>
    <dl>
        <dt>First Name:</dt>
        <dd>@Model.FirstName</dd>
        <dt>Last Name:</dt>
        <dd>@Model.LastName</dd>
        <dt>Address:</dt>
        <dd>@Model.Address</dd>
        <dt>Email:</dt>
        <dd>@Model.Email</dd>
        <dt>Net Salary:</dt>
        <dd>@Model.NetSalary</dd>
        <dt>Position:</dt>
        <dd>@Model.Position</dd>
        <dt>Gross Salary:</dt>
        <dd>@Model.GrossSalary</dd>
        <dt>Pay Specification:</dt>
        <dd>@Model.PaySpecification</dd>
        <dt>Tax:</dt>
        <dd>@Model.Tax</dd>
        <dt>PensionContribution:</dt>
        <dd>@Model.PensionContribution</dd>
        <dt>HealthContribution:</dt>
        <dd>@Model.HealthContribution</dd>
        <dt>UnemploymentContribution:</dt>
        <dd>@Model.UnemploymentContribution</dd>
        <dt>TotalTaxesAndContributions:</dt>
        <dd>@Model.TotalTaxesAndContributions</dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

<div>
    <h3>Calculate All</h3>
    <form asp-action="CalculateAll" method="post">
        <input type="hidden" asp-for="EmployeeId" />
        <button type="submit" class="btn btn-success">Calculate All</button>
    </form>
</div>

<h1>Convert to PDF</h1>
<button id="convertToPdf" class="btn btn-primary">Convert to PDF</button>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#convertToPdf").on("click", function (event) {
            event.preventDefault();
            var employeeId = @Model.EmployeeId;
            window.location.href = "/Employee/GeneratePdf?employeeId=" + employeeId;
        });
    });
</script>


<h1>Convert to PDF and Send Email</h1>

<form asp-action="ConvertToPdfAndSendEmail" method="post">
    <input type="hidden" asp-for="EmployeeId" />
    <button type="submit" class="btn btn-primary">Convert to PDF and Send Email</button>
</form>

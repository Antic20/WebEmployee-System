@model Employee

<form method="post">
    <input asp-for="EmployeeId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Employee</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="FirstName" class="p-0"></label>
            <input asp-for="FirstName" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="LastName" class="p-0"></label>
            <input asp-for="LastName" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Address" class="p-0"></label>
            <input asp-for="Address" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Email" class="p-0"></label>
            <input asp-for="Email" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="NetSalary" class="p-0"></label>
            <input asp-for="NetSalary" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Position" class="p-0"></label>
            <input asp-for="Position" disabled class="form-control" />
        </div>
       
        <div class="row row p-1">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back to list
                </a>
            </div>
        </div>
    </div>
</form>
